extends layout 
block content 
  h2.font-display.font-bold.text-5xl !{weaponType} list

  if weaponList.length
    ul.w-full.m-4.px-8.grid.grid-cols-1.sm_grid-cols-3.justify-center.content-center.justify-items-center
      for weapon in weaponList 
        li 
          a(href=`/inventory/weapons/${weaponType}/${weapon.name}` class=`text-${weapon.itemQuality}`).cursor-pointer.hover_underline.hover_text-gold-500.text-lg !{weapon.name}

  a(href="/inventory/weapons/"+weaponType+"/create").my-4.border.border-gray-200.rounded-md.px-4.py-1.font-display.font-bold.text-2xl.tracking-wider.hover_bg-gold-500.hover_text-gray-900.hover_border-gray-900.transition-all.duration-150 create new !{weaponType}
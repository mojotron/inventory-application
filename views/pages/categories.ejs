<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/main.css" />
    <title>Inventory | CRUD app</title>
  </head>
  <body
    class="min-w-[100vw] min-h-[100vh] flex flex-col items-center bg-gray-800"
  >
    <%- include("../partials/header.ejs", {activePage: "inventory"}) %>
    <!--  -->
    <main class="w-full px-10">
      <h2 class="mb-8 text-center font-display font-bold tracking-wide text-gray-200 text-3xl uppercase">Edit Category</h2>

      <section class="flex flex-col gap-4">
        <a class="block w-[180px] px-4 py-2 rounded-sm border border-uncommon bg-uncommon font-bold text-gray-800 hover:bg-gray-800 hover:text-uncommon" href="/categories/new">Add new Category</a>
        
        <h3 class="font-bold font-display uppercase rounded-sm text-3xl text-gray-200 tracking-wider">Categories</h3>

        <% if(locals.categories.length > 0) { %>
          <ul class="flex flex-col gap-2">
            <% categories.forEach((category) => { %>
              <li class="bg-poor px-4 py-2 flex justify-between items-center rounded-sm">
                <p class="font-bold text-lg text-gray-800"><%- category %></p>
                <div class="flex items-center gap-2">
                  <a class="cursor-pointer px-2 py-0.5 border border-gray-200 font-bold text-sm text-gray-800 rounded-sm bg-gray-200 hover:bg-gray-800 hover:text-uncommon hover:border-uncommon" href="/categories/<%- category %>/update">Edit</a>
                  <a class="cursor-pointer px-2 py-0.5 border border-gray-200 font-bold text-sm text-gray-800 rounded-sm bg-gray-200 hover:bg-gray-800 hover:text-error hover:border-error" href="/categories/<%- category %>/delete">Delete</a>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-poor">no categories yet</p>
        <% }; %>
      </section>
    </main>
    <!--  -->
    <%- include("../partials/footer.ejs") %>
  </body>
</html>

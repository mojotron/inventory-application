<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/main.css" />
    <title>Inventory | CRUD app</title>
  </head>
  <body
    class="min-w-[100vw] min-h-[100vh] flex flex-col items-center bg-gray-800"
  >
    <%- include("../partials/header.ejs", {activePage: "inventory"}) %>
    <!--  -->
    <main class="w-full px-10 flex flex-col items-center gap-4 pt-4">
      <h2 class="font-display font-bold tracking-wide text-gray-200 text-3xl uppercase">Create New Category</h2>
      <form class="w-full sm:w-[480px] space-y-2" action="/inventory/categories/new" method="post">
        <div class="flex flex-col gap-1">
          <label class="font-sans  text-gray-200" for="categoryName">Category Name</label>
          <!-- ADD min 3 max 50 after server tests -->
          <input class="px-2 py-1 rounded-sm outline-none focus:ring focus:ring-inset focus:ring-uncommon focus:ring-offset-0" type="text" id="categoryName" name="categoryName" value="<%- values.categoryName %>" required/>
          <% if(errors.length > 0) { %>
            <ul>
            <% errors.forEach(err => { %>
              <!--  -->
              <li><%- err.msg %></li>
              <!--  -->
            <% }); %>
            </ul>
          <% }; %>
        </div>

        <button class="block mx-auto px-4 py-2 rounded-sm border border-uncommon bg-uncommon font-bold text-gray-800 hover:bg-gray-800 hover:text-uncommon" type="submit">Create</button>
      </form>
    </main>
    <!--  -->
    <%- include("../partials/footer.ejs") %>
  </body>
</html>

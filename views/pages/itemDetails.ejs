<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/main.css" />
    <title>Inventory | CRUD app</title>
  </head>
  <body
    class="min-w-[100vw] min-h-[100vh] flex flex-col items-center bg-gray-800"
  >
    <%- include("../partials/header.ejs", {activePage: "inventory"}) %>
    <!--  -->
    <main class="w-full px-10">
      <header class="flex items-start justify-between">
        <h2 class="mb-8 font-display font-bold tracking-wide text-gray-200 text-5xl uppercase"><%- details.name %></h2>
        <div>
          <a class="text-uncommon hover:underline" href="/inventory/<%- activeCategory %>">return to <%- activeCategory %> inventory</a>
          <div class="flex items-center gap-2">
            <a class="cursor-pointer px-2 py-0.5 border border-gray-200 font-bold text-sm text-gray-800 rounded-sm bg-gray-200 hover:bg-gray-800 hover:text-uncommon hover:border-uncommon" href="">Edit</a>
            <a class="cursor-pointer px-2 py-0.5 border border-gray-200 font-bold text-sm text-gray-800 rounded-sm bg-gray-200 hover:bg-gray-800 hover:text-error hover:border-error" href="">Delete</a>
          </div>
        </div>
      </header>
      <section>
        <p><%- details.description %></p>
        
        <p></p>
      </section>
      
    </main>
    <!--  -->
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
